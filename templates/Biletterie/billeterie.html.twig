{% extends "base.html.twig" %}

{% block main %}
<main class="container">
    <article class="nextMatch">
        <article class="titleBoutique img-background">
            <figure>
                <img src="assets/img/logo-ns_masia.png" alt="Logo NsMasia"/>
            </figure>
            <h1>NsMasia FC</h1>
            <p>Billeterie Officiel</p>
        </article>
        <ul class="matchs">
        {% for match in matchs %}
            <ul class="reservation">
            {% if match.domicileExterieur == "domicile" %}
                <li>
                    <h2>NS MASIA FC</h2>
                    <p>{{ match.team }}</p>
                    <p>{{ match.domicileExterieur }}</p>
                </li>
            {% else %}
                <li>
                    <h2>{{ match.team }}</h2>
                    <p>NS MASIA FC</p>
                    <p>{{ match.domicileExterieur }}</p>
                </li>
            {% endif %}
                <li>
                    <p>{{ match.date |date("l j F", "Europe/Paris") }} - {{ match.time |date("H:i", "Europe/Paris") }}</p>
                </li>
                <li>
                    <figure> 
                        <img src="{{ match.logo_url }}" alt=" {{ match.logo_alt }} "/>
                        
                    </figure>
                </li>
                {% if match.domicileExterieur == "domicile" %}
                <li>
                    <a href="index.php?route=reservation&id={{match.match_id}}"><button type="submit" class="btn">Je r√©serve</button></a>
                </li>
                {% endif %}
            </ul>      
        {% endfor %}
        <ul>    
    </article>
</main>
{% endblock %}