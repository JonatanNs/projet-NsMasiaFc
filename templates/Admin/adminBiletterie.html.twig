{% extends "base.html.twig" %}

{% block main %}

<main class="main">
    <section class="admin">
        <a href="index.php?route=checkAdmin&secret={{secret}}" class="btn">Retour</a>
        <h1>Page Biletterie</h1>
        <article class="handle">
            <h2>Biletterie</h2>
            <ul>
                <li><span class="fa-solid fa-square-plus fa-2xl" style="color: #00ff62;"></span></li>
                <li><span class="fa-solid fa-repeat fa-2xl" style="color: #0534f0;"></span></li>
                <li><span class="fa-solid fa-trash-can fa-2xl" style="color: #ff0000;"></span></li>
            </ul>
            {% if errorMessage is not empty %}
                <p style="text-align:center;">{{ errorMessage }} <span class="fa-solid fa-square-xmark fa-xl" style="color: #ff0000;"></span></p>
            {% endif %}

            {% if valideMessage is not empty %}
                <p style="text-align:center;">{{ valideMessage }} <span class="fa-solid fa-square-check fa-xl" style="color: #00ff55;"></span></p>
            {% endif %}
            <article class="add">
                <h3>Ajouter un match <span class="fa-solid fa-square-plus fa-xl" style="color: #00ff62;"></span></h3>
                <form action="index.php?route=checkAddMatchs&secret={{secret}}" method="POST" class="form">
                <input type="hidden" name="csrf-token" value="{{ tokenCSRF }}">
                    <fieldset>
                        <label for="location">NS Masia FC</label>
                        <select name="location" required>
                            <option value="">--</option>
                            <option value="exterieur" >Extérieur</option>
                            <option value="domicile" >Domicile</option>
                        </select> 
                    </fieldset>
                    <fieldset>
                        <label for="rivalTeam">Equipe rival</label>
                        <select name="rivalTeam" required>
                            <option value="">--</option>
                        {% for rival in teamRival %}
                            <option value="{{rival.team}}" >{{rival.team}}</option>
                        {% endfor %}
                        </select> 
                    </fieldset>
                    <fieldset>
                        <label for="time">Heure</label>
                        <input type="time" name="time" required>
                    </fieldset>
                    <fieldset>
                        <label for="date">Date</label>
                        <input type="date" name="date" required>
                    </fieldset>
                    <fieldset>
                    <button type="submit" class="btn">Ajouter</button>
                    </fieldset>
                </form>
            </article>

            <article class="change">
                <h3>Modifier un match <span class="fa-solid fa-repeat fa-xl" style="color: #0534f0;"></span></h3>
                <form action="index.php?route=checkChangeMatch&secret={{secret}}" method="POST" class="form">
                <input type="hidden" name="csrf-token" value="{{ tokenCSRF }}">
                    <fieldset>
                        <label for="selectMatch">Choisissez le match à modifier : </label>
                        <select name="selectMatch" id="selectMatch" required>
                            <option value=""> <span class="fa-solid fa-chevron-down fa-sm"></span> </option>
                            <option value="">XS</option>
                        </select>
                    </fieldset>
                    <fieldset>
                        <label for="location">NS Masia FC</label>
                        <select name="location" required>
                            <option value="">--</option>
                            <option value="exterieur" >Extérieur</option>
                            <option value="domicile" >Domicile</option>
                        </select> 
                    </fieldset>
                    <fieldset>
                        <label for="rivalTeam">Equipe rival</label>
                        <select name="rivalTeam" required>
                            <option value="">--</option>
                        {% for rival in teamRival %}
                            <option value="{{rival.team}}" >{{rival.team}}</option>
                        {% endfor %}
                        </select> 
                    </fieldset>
                    <fieldset>
                        <label for="time">Heure</label>
                        <input type="time" name="time" required>
                    </fieldset>
                    <fieldset>
                        <label for="date">Date</label>
                        <input type="date" name="date" required>
                    </fieldset>
                    <fieldset>
                    <button type="submit" class="btn">Ajouter</button>
                    </fieldset>
                </form>
            </article>

            <article class="remove">
                <h3>Retirer un match <span class="fa-solid fa-trash-can fa-xl" style="color: #ff0000;"></span></h3>
                <form action="index.php?route=checkRemoveMatch&secret={{secret}}" method="POST" class="form">
                <input type="hidden" name="csrf-token" value="{{ tokenCSRF }}">
                    <fieldset>
                        <label for="selectMatch">Choisissez le match à modifier : </label>
                        <select name="selectMatch" id="selectMatch" required>
                            <option value=""> <span class="fa-solid fa-chevron-down fa-sm"></span> </option>
                            <option value="">XS</option>
                        </select>
                    </fieldset>
                    <fieldset>
                        <button type="submit" class="btn">Ajouter</button>
                    </fieldset>
                </form>
            </article>
        </article>
    </section>
</main>
{% endblock %}