

{% block main %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--SEO-->
    <meta name="robots" content="index,follow">
    <meta name="description" content="Site officiel du FC NsMasia. Toute l'actualité autour de la Ns, vente de maillots et de places." >
    <link rel="icon" href="assets/img/logo-ns_masia.png" alt="Logo NsMasiaFC">
    <!-- Stripe -->
    <script src="https://js.stripe.com/v3/" ></script>
    <!--Font POPPIN -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Lilita+One&family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Sora:wght@100..800&family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <!--Font Nunito -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Lilita+One&family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Sora:wght@100..800&family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet"><!-- Css.gg-->
    <link href="https://css.gg/css" rel="stylesheet" />
    <!-- Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- CSS-->
    <link rel="stylesheet" href="assets/styles/scss/style.css">
    <title>Site officiel du NsMasia F.C</title>   
</head>
<body>
    <header class="header">       
        {% if userIsConect is not empty %} <!-- Quand l'utilisateur est connecter-->
            <div>
                <p>{{ userIsConect }}</p> 
            </div> 
            {% if rolesUser == "ADMIN" %} 
                <form action="index.php?route=checkAdmin" method="POST">
                    <input type="hidden" name="csrf-token" id="csrf-token" value="{{ tokenCSRF }}" />
                    <button type="submit" class="btn">ADMIN <span class="fa-solid fa-user-tie" style="color: #ffffff;"></span></button>
                </form> 
            {% endif %}
        {% endif %}
        {% if userIsConect is empty %} <!-- Quand l'utilisateur n'est pas connecter-->
            <div>
                <a href="index.php?route=form"> <span class="fa-solid fa-user fa-lg" id="toggleForm"> </span></a> <!-- Go form -->
            </div>
        {% endif %}
        <figure>
            <a href="index.php?route=home"><img src="assets/img/logo-ns_masia.png" alt="{{nsMasia.logoalt}}"/></a>
        </figure>
        <div class="menu">
            <p class="gg-menu openMenu" style="color: #000000;"></p> 
            {% block menuDeroulant %} 
                <nav class="navMobile invisible"> 
                    <p class="fa-solid fa-x fa-lg closeMenu" style="color: #000000;"></p>
                    <div class="nav-links">
                        <ul>
                            <li>
                                <a href="index.php?route=news">Actualité <span class="fa-solid fa-newspaper" style="color: #000000;"></span></a>
                            </li>

                            <li>
                                <a href="index.php?route=club">Club <span class="fa-regular fa-futbol" style="color: #000000;"></span></a>
                            </li>
                        </ul>
                        <ul>
                            <li>
                                <a href="index.php?route=boutique">Boutique <span class="fa-solid fa-shop" style="color: #000000;"></span></a>
                            </li>
                            <li>
                                <a href="index.php?route=billeterie">Billeterie <span class="fa-solid fa-ticket" style="color: #000000;"></span></a>
                            </li>
                        </ul>
                        <ul>
                            <!--<li>Paramètres</li>-->       
                        {% if userIsConect is not empty %} <!-- Quand l'utilisateur est connecter il s'affiche-->
                            <li>
                                <a href="index.php?route=compteUser"><p>Mon compte <span class="fa-solid fa-user" style="color: #000000;"></span></p></a>
                            </li>
                            <li>
                                <a href="index.php?route=logout">Déconnexion <span class="fa-solid fa-right-from-bracket fa-sm"></span> </a>
                            </li>
                        {% endif %}
                        </ul>
                    </div>
                </nav>
            {% endblock %}
        </div>
    </header>
    <main class="container">
        <section class="admin">
            <a href="index.php?route=checkAdmin"><button class="btn">Retour</button></a>
                <h1>Page Actualité</h1>
                <article class="handle">
                    <h2>Articles</h2>
                    <ul>
                        <li><span class="fa-solid fa-square-plus fa-2xl" style="color: #00ff62;"></span></li>
                        <li><span class="fa-solid fa-repeat fa-2xl" style="color: #0534f0;"></span></li>
                        <li><span class="fa-solid fa-trash-can fa-2xl" style="color: #ff0000;"></span></li>
                    </ul>
                    <article class="add">
                        <h3>Ajouter un article <span class="fa-solid fa-square-plus fa-xl" style="color: #00ff62;"></span></h3>
                        <form action="index.php?route=checkAddArticle" method="POST" class="form formAddArticle">
                            <input type="hidden" name="csrf-token" id="csrf-token" value="{{ tokenCSRF }}" />
                                <fieldset>
                                    <label for="titleArticle">Titre</label>
                                    <input type="text" id="titleArticle" name="titleArticle" placeholder="Titre" required>
                                </fieldset>
                                <fieldset>
                                    <label for="excerptArticle">Résumé</label>
                                    <textarea id="excerptArticle" name="excerptArticle" placeholder="Résumé" maxlength="550" required></textarea>
                                </fieldset>
                                <fieldset>
                                    <label for="contentArticle">Contenu</label>
                                    <textarea id="contentArticle" name="contentArticle" placeholder="Contenu" required></textarea>
                                </fieldset>
                                <fieldset>
                                    <label for="dateArticle">Date</label>
                                    <input type="date" id="dateArticle" name="dateArticle" placeholder="Date" required>
                                </fieldset>
                                <fieldset>
                                    <label for="imgUrl">Image Url</label>
                                    <input type="url" id="imgUrlArticle" name="imgUrlArticle" placeholder="https://example.com" required>
                                </fieldset>
                                <fieldset>
                                    <label for="imgUrlArticle">Image Alt</label>
                                    <input type="url" id="imgAltArticle" name="imgAltArticle" placeholder="https://example.com" required>
                                </fieldset>
                            <fieldset>
                                <button type="submit" class="btn">Ajouter</button>
                            </fieldset>
                        </form>
                    </article>

                    <article class="change">
                        <h3>Modifier un article <span class="fa-solid fa-repeat fa-2xl" style="color: #0534f0;"></span></h3>
                        <form action="index.php?route=checkChangeArticle" method="POST" class="form formChangeArticle">
                            <input type="hidden" name="csrf-token" id="csrf-token" value="{{ tokenCSRF }}" />
                                <fieldset>
                                    <label for="article">Choisissez l'article à modifier : </label>
                                    <select name="article" id="article" required>
                                        <option value=""> <i class="fa-solid fa-chevron-down fa-sm"></i> </option>
                                        <option value="">XS</option>
                                    </select>
                                </fieldset>
                                <fieldset>
                                    <label for="titleArticle">Titre</label>
                                    <input type="text" id="titleArticle" name="titleArticle" >
                                </fieldset>
                                <fieldset>
                                    <label for="excerptArticle">Résumé</label>
                                    <textarea id="excerptArticle" name="excerptArticle" maxlength="550"></textarea>
                                </fieldset>
                                <fieldset>
                                    <label for="contentArticle">Contenu</label>
                                    <textarea id="contentArticle" name="contentArticle"></textarea>
                                </fieldset>
                                <fieldset>
                                    <label for="dateArticle">Date</label>
                                    <input type="date" id="dateArticle" name="dateArticle">
                                </fieldset>
                                <fieldset>
                                    <label for="imgUrl">Image Url</label>
                                    <input type="url" id="imgUrlArticle" name="imgUrlArticle">
                                </fieldset>
                                <fieldset>
                                    <label for="imgUrlArticle">Image Alt</label>
                                    <input type="url" id="imgAltArticle" name="imgAltArticle">
                                </fieldset>
                            <fieldset>
                                <button type="submit" class="btn">Modifier</button>
                            </fieldset>
                        </form>
                    </article>

                    <article class="remove">
                        <h3>Supprimer un article <span class="fa-solid fa-trash-can fa-2xl" style="color: #ff0000;"></span></h3>
                        <form action="index.php?route=checkRemoveArticle" method="POST" class="form formRemoveArticle">
                            <input type="hidden" name="csrf-token" id="csrf-token" value="{{ tokenCSRF }}" />
                            <fieldset>
                                <label for="article">Choisissez l'article à suprimmer : </label>
                                <select name="article" id="article" required>
                                    <option value=""> <i class="fa-solid fa-chevron-down fa-sm"></i> </option>
                                    <option value="">XS</option>
                                </select>
                            </fieldset>
                            <fieldset>
                                <button type="submit" class="btn">Supprimer</button>
                            </fieldset>
                        </form>
                    </article>
                </article>
        </section>
    </main>
        <!-- Bootstrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
   <!-- FontAwesone-->
