{% extends "base.html.twig" %}

{% block main %}

<main class="main">
    <section class="admin">
        <a href="index.php?route=checkAdmin&secret={{secret}}" class="btn">Retour</a>
        <h1>Page Boutique</h1>
        <article class="handle">
            <h2>Boutique</h2>
            <ul>
                <li><span class="fa-solid fa-square-plus fa-2xl" style="color: #00ff62;"></span></li>
                <li><span class="fa-solid fa-repeat fa-2xl" style="color: #0534f0;"></span></li>
                <li><span class="fa-solid fa-trash-can fa-2xl" style="color: #ff0000;"></span></li>
            </ul>
            {% if errorMessage is not empty %}
                <p style="text-align:center;">{{ errorMessage }} <span class="fa-solid fa-square-xmark fa-xl" style="color: #ff0000;"></span></p>
            {% endif %}

            {% if valideMessage is not empty %}
                <p style="text-align:center;">{{ valideMessage }} <span class="fa-solid fa-square-check fa-xl" style="color: #00ff55;"></span></p>
            {% endif %}
            <article class="add">
                <h3>Ajouter un produit <span class="fa-solid fa-square-plus fa-xl" style="color: #00ff62;"></span></h3>
                <form action="index.php?route=checkAddproduct&secret={{secret}}" method="POST" class="form">
                <input type="hidden" name="csrf-token" id="csrf-token" value="{{ tokenCSRF }}" />
                    <fieldset>
                        <label for="nameProduct">Name</label>
                        <input type="text" id="nameProduct" name="nameProduct" placeholder="Maillot" required>
                    </fieldset>

                    <fieldset>
                        <label for="imgUrl">Url 1</label>
                        <input type="url" id="imgUrl" name="imgUrl" placeholder="https://example.com" required>
                    </fieldset>

                    <fieldset>
                        <label for="imgUrl">Image Alt 1</label>
                        <input type="url" id="imgAlt" name="imgAlt" placeholder="Description de l'image" required>
                    </fieldset>

                    <fieldset>
                        <label for="ortherImgUrl">Url 2 </label>
                        <input type="url" id="ortherImgUrl" name="ortherImgUrl" placeholder="https://example.com">
                    </fieldset>

                    <fieldset>
                        <label for="ortherImgUrl">Image Alt 2</label>
                        <input type="url" id="ortherImgAlt" name="ortherImgAlt" placeholder="Description de l'image">
                    </fieldset>

                    <fieldset>
                        <label for="description">Description</label>
                        <input type="text" id="description" name="description" placeholder="Description du produit" required>
                    </fieldset>

                    <fieldset>
                        <label for="prices">Prix</label>
                        <input type="number" id="prices" name="prices" placeholder="Prix du produit" required>
                    </fieldset>

                    <fieldset>
                        <button type="submit" class="btn">Ajouter</button>
                    </fieldset>
                </form>
            </article>

            <article class="remove">
                <h3>Retirer un produit <span class="fa-solid fa-trash-can fa-xl" style="color: #ff0000;"></span></h3>
                <form action="index.php?route=checkRemoveproduct&secret={{secret}}" method="POST" class="form">
                <input type="hidden" name="csrf-token" id="csrf-token" value="{{ tokenCSRF }}" />
                    <fieldset>
                        <label for="selectProduct">Choisissez le produit Ã  modifier : </label>
                        <select name="selectProduct" id="selectProduct" required>
                            <option value=""> <span class="fa-solid fa-chevron-down fa-sm"></span> </option>
                            <option value="">XS</option>
                        </select>
                    </fieldset>

                    <fieldset>
                        <button type="submit" class="btn">Supprimer</button>
                    </fieldset>
                </form>
            </article>
        </article>
    </section>
</main>
{% endblock %}