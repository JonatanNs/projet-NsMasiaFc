{% extends "base.html.twig" %}

{% block main %}
<main class="main">
    <article class="allRanking">
    <a href="index.php?route=home" class="btn">Retour</a>
        <h1>Classement <span class="fa-solid fa-ranking-star" style="color: #04ff00;"></span></h1>
            {% if errorMessage is not empty %}
                <p style="text-align:center;">{{ errorMessage }} <span class="fa-solid fa-square-xmark fa-xl" style="color: #ff0000;"></span></p>
            {% endif %}

            {% if valideMessage is not empty %}
                <p style="text-align:center;">{{ valideMessage }} <span class="fa-solid fa-square-check fa-xl" style="color: #00ff55;"></span></p>
            {% endif %}
        <table>
            <thead>
                <tr>
                    <th>POS</th>
                    <th>Equipe</th>
                    <th>J</th>
                    <th>G</th>
                    <th>N</th>
                    <th>P</th>
                    <th>PTS</th>
                </tr>
            </thead>
            <tbody>
                {% for team in allTeam %}
                <tr>
                    <td class="td">{{ loop.index }}</td> 
                    <td class="tdTeam"> <img src="{{ team.logo_url }}" alt="{{ team.logo_alt }}"/> {{ team.team }}</td>
                    <td class="td">{{ team.match_play }}</td>
                    <td class="td">{{ team.match_win }}</td>
                    <td class="td">{{ team.match_nul }}</td>
                    <td class="td">{{ team.match_lose }}</td>
                    <td class="td">{{ team.ranking_points }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </article>
</main>
{% endblock %}